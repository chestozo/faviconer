{
    "manifest_version": 2,
    "name": "Faviconer",
    "version": "0.1",
    "description": "Detects requests to any url and notifies user about it. NOTE: uses experimental api",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [ "bg.js" ]
    },
    "options_page": "options.html",

    "permissions": [
        "tabs",
        "webRequest",
        "*://*/*",
        "notifications"
    ],

    "web_accessible_resources": [
        "icon.png"
    ]
}
